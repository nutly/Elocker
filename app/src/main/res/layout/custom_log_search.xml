<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_start_date"
        android:layout_width="113dp"
        android:layout_height="@dimen/row_height"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/start_date"
        android:textAlignment="gravity"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.17" />

    <TextView
        android:id="@+id/title_end_date"
        android:layout_width="0dp"
        android:layout_height="@dimen/row_height"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/end_date"
        android:textAlignment="gravity"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/title_start_date"
        app:layout_constraintStart_toStartOf="@+id/title_start_date"
        app:layout_constraintTop_toBottomOf="@+id/title_start_date" />

    <EditText
        android:id="@+id/log_search_start_date"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/inputbox_white"
        android:ems="10"
        android:inputType="datetime"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/title_start_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/title_start_date"
        app:layout_constraintTop_toTopOf="@+id/title_start_date"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/log_search_end_date"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/inputbox_white"
        android:ems="10"
        android:inputType="datetime"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/title_end_date"
        app:layout_constraintEnd_toEndOf="@+id/log_search_start_date"
        app:layout_constraintStart_toStartOf="@+id/log_search_start_date"
        app:layout_constraintTop_toTopOf="@+id/title_end_date" />

</android.support.constraint.ConstraintLayout>