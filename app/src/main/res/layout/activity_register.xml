<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity">

    <TextView
        android:id="@+id/register_title_phone_num"
        android:layout_width="0dp"
        android:layout_height="@dimen/row_height"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="300dp"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/mobile"
        android:textAlignment="gravity"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.047" />

    <TextView
        android:id="@+id/required_tag_1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/require_tag"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toBottomOf="@+id/register_title_phone_num"
        app:layout_constraintStart_toEndOf="@+id/register_title_phone_num"
        app:layout_constraintTop_toTopOf="@+id/register_title_phone_num" />

    <EditText
        android:id="@+id/activity_register_phone_num"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/inputbox_white"
        android:ems="19"
        android:gravity="center_vertical"
        android:hint="@string/input_mobile"
        android:inputType="phone"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/register_title_phone_num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/required_tag_1"
        app:layout_constraintTop_toTopOf="@+id/register_title_phone_num"
        app:layout_constraintVertical_bias="0.0">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/register_title_pass1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/row_height"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/password"
        android:textAlignment="gravity"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/register_title_phone_num"
        app:layout_constraintStart_toStartOf="@+id/register_title_phone_num"
        app:layout_constraintTop_toBottomOf="@+id/register_title_phone_num" />

    <TextView
        android:id="@+id/require_tag_2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/require_tag"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toBottomOf="@+id/register_title_pass1"
        app:layout_constraintEnd_toEndOf="@+id/required_tag_1"
        app:layout_constraintStart_toStartOf="@+id/required_tag_1"
        app:layout_constraintTop_toTopOf="@+id/register_title_pass1" />

    <EditText
        android:id="@+id/activity_register_pass1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/inputbox_white"
        android:ems="19"
        android:gravity="clip_vertical"
        android:hint="@string/input_passwd"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textAlignment="gravity"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/register_title_pass1"
        app:layout_constraintEnd_toEndOf="@+id/activity_register_phone_num"
        app:layout_constraintStart_toStartOf="@+id/activity_register_phone_num"
        app:layout_constraintTop_toTopOf="@+id/register_title_pass1" />

    <TextView
        android:id="@+id/register_title_confirm_pass"
        android:layout_width="0dp"
        android:layout_height="@dimen/row_height"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/confirm_pass"
        android:textAlignment="gravity"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/register_title_phone_num"
        app:layout_constraintStart_toStartOf="@+id/register_title_phone_num"
        app:layout_constraintTop_toBottomOf="@+id/register_title_pass1" />

    <TextView
        android:id="@+id/require_tag_3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/require_tag"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toBottomOf="@+id/register_title_confirm_pass"
        app:layout_constraintEnd_toEndOf="@+id/required_tag_1"
        app:layout_constraintStart_toStartOf="@+id/required_tag_1"
        app:layout_constraintTop_toTopOf="@+id/register_title_confirm_pass" />

    <EditText
        android:id="@+id/activity_register_pass2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/inputbox_white"
        android:ems="19"
        android:hint="@string/input_pass_again"
        android:inputType="textPassword"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/register_title_confirm_pass"
        app:layout_constraintEnd_toEndOf="@+id/activity_register_phone_num"
        app:layout_constraintStart_toStartOf="@+id/activity_register_phone_num"
        app:layout_constraintTop_toTopOf="@+id/register_title_confirm_pass"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/register_title_code"
        android:layout_width="0dp"
        android:layout_height="@dimen/row_height"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/verification_code"
        android:textAlignment="gravity"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/required_tag_1"
        app:layout_constraintStart_toStartOf="@+id/register_title_phone_num"
        app:layout_constraintTop_toBottomOf="@+id/register_title_confirm_pass" />

    <TextView
        android:id="@+id/require_tag_4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/require_tag"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toBottomOf="@+id/register_title_code"
        app:layout_constraintEnd_toEndOf="@+id/required_tag_1"
        app:layout_constraintStart_toStartOf="@+id/required_tag_1"
        app:layout_constraintTop_toTopOf="@+id/register_title_code" />


    <EditText
        android:id="@+id/activity_register_code"
        android:layout_width="120dp"
        android:layout_height="0dp"
        android:background="@drawable/inputbox_white"
        android:ems="19"
        android:hint="@string/input_code"
        android:inputType="number"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/register_title_code"
        app:layout_constraintStart_toStartOf="@+id/activity_register_phone_num"
        app:layout_constraintTop_toTopOf="@+id/register_title_code"></EditText>

    <Button
        android:id="@+id/activity_register_get_code"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:background="@color/transparent"
        android:text="@string/get_code"
        android:textAllCaps="false"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/register_title_code"
        app:layout_constraintEnd_toEndOf="@+id/activity_register_phone_num"
        app:layout_constraintStart_toEndOf="@+id/activity_register_code"
        app:layout_constraintTop_toTopOf="@+id/register_title_code" />

    <TextView
        android:id="@+id/register_title_nickname"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/row_height"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/nickname"
        android:textAlignment="gravity"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/required_tag_1"
        app:layout_constraintStart_toStartOf="@+id/register_title_phone_num"
        app:layout_constraintTop_toBottomOf="@+id/register_title_code" />

    <EditText
        android:id="@+id/activity_register_username"
        android:layout_width="257dp"
        android:layout_height="wrap_content"
        android:background="@drawable/inputbox_white"
        android:ems="19"
        android:hint="@string/input_nick_name"
        android:inputType="text"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/register_title_nickname"
        app:layout_constraintEnd_toEndOf="@+id/activity_register_phone_num"
        app:layout_constraintStart_toStartOf="@+id/activity_register_phone_num"
        app:layout_constraintTop_toTopOf="@+id/register_title_nickname" />

    <TextView
        android:id="@+id/register_title_email"
        android:layout_width="0dp"
        android:layout_height="@dimen/row_height"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal|center_vertical"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:text="@string/email"
        android:textAlignment="gravity"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/required_tag_1"
        app:layout_constraintStart_toStartOf="@+id/register_title_phone_num"
        app:layout_constraintTop_toBottomOf="@+id/register_title_nickname" />

    <EditText
        android:id="@+id/activity_register_email"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/inputbox_white"
        android:ems="19"
        android:hint="@string/input_nick_name"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/register_title_email"
        app:layout_constraintEnd_toEndOf="@+id/activity_register_phone_num"
        app:layout_constraintStart_toStartOf="@+id/activity_register_phone_num"
        app:layout_constraintTop_toTopOf="@+id/register_title_email" />

    <Button
        android:id="@+id/activity_register_submit"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/mainBgColor"
        android:text="@string/submit"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_register_email"
        app:layout_constraintVertical_bias="0.142" />

</android.support.constraint.ConstraintLayout>