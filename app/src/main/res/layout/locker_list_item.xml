<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/key_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="9dip"
    android:background="@color/colorLightGray">

    <Button
        android:id="@+id/locker_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="#00e6e6e6"
        android:onClick="showList" />

    <ImageView
        android:id="@+id/locker_ic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:contentDescription="@string/navigate_keys"
        android:padding="10dp"
        app:srcCompat="@drawable/unlock" />

    <TextView
        android:id="@+id/locker_origin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/locker_description"
        android:layout_toEndOf="@+id/locker_ic"
        android:paddingStart="15dp"
        android:paddingEnd="2dp"
        android:textColor="#B0B0B0"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/locker_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/locker_button"
        android:layout_toEndOf="@+id/locker_ic"
        android:paddingStart="15dp"
        android:paddingTop="6dp"
        android:paddingEnd="20dp"
        android:textColor="@color/textColor"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>
