<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:columnCount="2"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="@dimen/locker_detail_menu_item_width"
        android:layout_height="wrap_content"
        android:padding="@dimen/locker_detail_menu_item_padding"
        android:text="@string/lockerDescription" />

    <TextView
        android:id="@+id/locker_transfer_locker_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:padding="@dimen/locker_detail_menu_item_padding" />

    <TextView
        android:layout_width="@dimen/locker_detail_menu_item_width"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:padding="@dimen/locker_detail_menu_item_padding"
        android:text="@string/transfer_to" />

    <EditText
        android:id="@+id/locker_transfer_to_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="1"
        android:autofillHints=""
        android:ems="10"
        android:inputType="phone"
        android:padding="@dimen/locker_detail_menu_item_padding" />

</GridLayout>
