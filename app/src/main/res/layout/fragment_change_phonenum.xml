<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragmentChangePhoneNum">

    <Button
        android:id="@+id/change_phonenum_get_code"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="@color/colorLightGray"
        android:text="@string/get_code"
        android:textAllCaps="false"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/change_phonenum_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/change_phonenum_code"
        app:layout_constraintTop_toTopOf="@+id/change_phonenum_code" />

    <EditText
        android:id="@+id/change_phonenum_code"
        android:layout_width="126dp"
        android:layout_height="0dp"
        android:background="@drawable/inputbox_white"
        android:ems="10"
        android:inputType="number"
        android:text="@string/input_code"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/title_code"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/change_phonenum_password"
        app:layout_constraintTop_toTopOf="@+id/title_code"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/change_phonenum_new_mobile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/inputbox_white"
        android:ems="10"
        android:focusable="auto"
        android:hint="@string/input_new_mobile"
        android:inputType="phone"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/title_new_mobile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/change_phonenum_mobile"
        app:layout_constraintTop_toTopOf="@+id/title_new_mobile" />

    <TextView
        android:id="@+id/title_new_mobile"
        android:layout_width="0dp"
        android:layout_height="@dimen/row_height"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/new_mobile"
        android:textAlignment="gravity"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/title_code" />

    <TextView
        android:id="@+id/title_code"
        android:layout_width="0dp"
        android:layout_height="@dimen/row_height"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/verification_code"
        android:textAlignment="gravity"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.427"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/title_password" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="129dp"
        android:layout_height="@dimen/row_height"
        android:layout_marginEnd="8dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/cu_account"
        android:textAlignment="gravity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.024"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206" />

    <TextView
        android:id="@+id/change_phonenum_mobile"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/inputbox_white"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/change_phonenum_submit_btn"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="8dp"
        android:background="@color/colorLightGray"
        android:text="@string/submit"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_phonenum_new_mobile" />

    <TextView
        android:id="@+id/title_password"
        android:layout_width="0dp"
        android:layout_height="@dimen/row_height"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/password"
        android:textAlignment="gravity"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/change_phonenum_password"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/inputbox_white"
        android:ems="10"
        android:inputType="textPassword"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="@+id/title_password"
        app:layout_constraintEnd_toEndOf="@+id/change_phonenum_mobile"
        app:layout_constraintHorizontal_bias="0.732"
        app:layout_constraintStart_toStartOf="@+id/change_phonenum_mobile"
        app:layout_constraintTop_toTopOf="@+id/title_password" />
</android.support.constraint.ConstraintLayout>